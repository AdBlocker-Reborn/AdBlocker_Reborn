<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="20px"
        android:minWidth="50px"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtBlocks"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:scrollHorizontally="false"
        android:text="App:aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtAllows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtBlocks"
        android:layout_alignBottom="@+id/txtBlocks"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:text="Allows:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtBlocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgHistory"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/imgHistory"
        android:text="Blocks:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>