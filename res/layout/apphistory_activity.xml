<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/appHistory_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/chAppHistoryShowBlocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/appHistory_name"
        android:text="Show blocked" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chAppHistoryShowBlocked"
        android:layout_alignBottom="@+id/chAppHistoryShowBlocked"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/chAppHistoryShowBlocked"
        android:text="Show Allowed" />

    <ListView
        android:id="@+id/historyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/chAppHistoryShowBlocked" >
    </ListView>

</RelativeLayout>
